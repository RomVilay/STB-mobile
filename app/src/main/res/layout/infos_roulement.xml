<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_textview_full_grey"
    android:padding="5dp">

    <TextView
        android:id="@+id/nomType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Type"
        app:layout_constraintBottom_toBottomOf="@+id/typeR"
        app:layout_constraintEnd_toStartOf="@+id/typeR"
        app:layout_constraintTop_toTopOf="@+id/typeR"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/typeR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toStartOf="@+id/titreRef"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/refR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/typeR"
        app:layout_constraintEnd_toStartOf="@+id/supp"
        app:layout_constraintTop_toTopOf="@+id/typeR" />

    <Button
        android:id="@+id/supp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@color/gray_400"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/refR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/refR" />

    <TextView
        android:id="@+id/titreRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Ref"
        app:layout_constraintBottom_toBottomOf="@+id/nomType"
        app:layout_constraintEnd_toStartOf="@+id/refR"
        app:layout_constraintTop_toTopOf="@+id/nomType" />
</androidx.constraintlayout.widget.ConstraintLayout>