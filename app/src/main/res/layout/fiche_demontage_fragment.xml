<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/demoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.FicheDemontage.FicheDemontage">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="245dp"
        android:layout_height="135dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_grand_format" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="fiche démontage"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerDemontage"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/selectDemontage"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sélection"
            app:backgroundTint="#164081" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="765dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp">

    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>