<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FicheDemontage.PompeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/info"
                android:layout_width="649dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titremot"
                    android:layout_width="647dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="4dp"
                    android:background="#164081"
                    android:gravity="center"
                    android:text="Infos Reducteur"
                    android:textColor="#FAF9F9"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/infosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp">

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/infosReducteur"
                android:layout_width="649dp"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp">

                    <TextView
                        android:id="@+id/titreReducteur"
                        android:layout_width="647dp"
                        android:layout_height="66dp"
                        android:background="#164081"
                        android:gravity="center"
                        android:text="Reducteur"
                        android:textColor="#FAF9F9"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/Trmintitre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="40dp"
                        android:text="Tr/min :"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titreReducteur" />

                    <EditText
                        android:id="@+id/trMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/round_textview"
                        android:ems="5"
                        android:inputType="number"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/Trmintitre"
                        app:layout_constraintStart_toEndOf="@+id/Trmintitre"
                        app:layout_constraintTop_toTopOf="@+id/Trmintitre"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/titremodel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:text="Modele"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/trMin"
                        app:layout_constraintStart_toEndOf="@+id/trMin"
                        app:layout_constraintTop_toTopOf="@+id/trMin"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/modele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:background="@drawable/round_textview"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/titremodel"
                        app:layout_constraintStart_toEndOf="@+id/titremodel"
                        app:layout_constraintTop_toTopOf="@+id/titremodel"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/indRedTitre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="indice de réduction :"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Trmintitre" />

                    <EditText
                        android:id="@+id/indRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:background="@drawable/round_textview"
                        android:ems="5"
                        android:inputType="number"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/indRedTitre"
                        app:layout_constraintStart_toEndOf="@+id/indRedTitre"
                        app:layout_constraintTop_toTopOf="@+id/indRedTitre"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/titrehuile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Type huile :"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/indRed"
                        app:layout_constraintStart_toEndOf="@+id/indRed"
                        app:layout_constraintTop_toTopOf="@+id/indRed"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/typeHuile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_textview"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="@+id/titrehuile"
                        app:layout_constraintStart_toEndOf="@+id/titrehuile"
                        app:layout_constraintTop_toTopOf="@+id/titrehuile" />

                    <TextView
                        android:id="@+id/titrqtHuile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Quantité huile :"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/indRedTitre" />

                    <EditText
                        android:id="@+id/editTextTextPersonName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/round_textview"
                        android:ems="5"
                        android:inputType="text"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/titrqtHuile"
                        app:layout_constraintStart_toEndOf="@+id/titrqtHuile"
                        app:layout_constraintTop_toTopOf="@+id/titrqtHuile" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/typeroulements"
                        android:layout_width="599dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_textview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titrqtHuile">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:text="Roulements"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/spiRoul"
                            android:layout_width="190dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginLeft="56dp"
                            android:layout_marginTop="48dp"
                            android:background="@drawable/dropdown_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Switch
                            android:id="@+id/switchRoullements"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="240dp"
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="10dp"
                            android:text="Avant"
                            app:layout_constraintStart_toEndOf="@+id/textView23"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/refRoullement"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_textview"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="référence roulement "
                            android:inputType="text"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView27"
                            app:layout_constraintStart_toEndOf="@+id/textView27"
                            app:layout_constraintTop_toTopOf="@+id/textView27"
                            app:layout_constraintVertical_bias="0.555" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginLeft="28dp"
                            android:text="ref :"
                            app:layout_constraintBottom_toBottomOf="@+id/spiRoul"
                            app:layout_constraintStart_toEndOf="@+id/spiRoul"
                            app:layout_constraintTop_toTopOf="@+id/spiRoul"
                            app:layout_constraintVertical_bias="0.666" />

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginLeft="1dp"
                            android:text="Arrière"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="@+id/switchRoullements"
                            app:layout_constraintStart_toEndOf="@+id/switchRoullements"
                            app:layout_constraintTop_toTopOf="@+id/switchRoullements" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/specsRoul"
                            android:layout_width="547dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/refRoullement" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/typejoints"
                        android:layout_width="598dp"
                        android:layout_height="96dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/round_textview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/typeroulements">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:text="Types de Joints"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/spiJoints"
                            android:layout_width="181dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginLeft="48dp"
                            android:layout_marginTop="44dp"
                            android:background="@drawable/dropdown_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Switch
                            android:id="@+id/switchJoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="192dp"
                            android:layout_marginLeft="192dp"
                            android:layout_marginTop="10dp"
                            android:text="Avant"
                            app:layout_constraintStart_toEndOf="@+id/textView29"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/refJoints"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/round_textview"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="référence joints"
                            android:inputType="text"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/spiJoints"
                            app:layout_constraintStart_toEndOf="@+id/textView30"
                            app:layout_constraintTop_toTopOf="@+id/spiJoints" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="104dp"
                            android:layout_marginLeft="104dp"
                            android:text="ref :"
                            app:layout_constraintBottom_toBottomOf="@+id/refJoints"
                            app:layout_constraintStart_toEndOf="@+id/spiJoints"
                            app:layout_constraintTop_toTopOf="@+id/refJoints" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:text="Arrière"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="@+id/switchJoints"
                            app:layout_constraintStart_toEndOf="@+id/switchJoints"
                            app:layout_constraintTop_toTopOf="@+id/switchJoints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/titrePaint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="48dp"
                        android:text="Peinture"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName3"
                        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName3"
                        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName3"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/peintureRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="19dp"
                        android:background="@drawable/round_textview"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="@+id/titrePaint"
                        app:layout_constraintStart_toEndOf="@+id/titrePaint"
                        app:layout_constraintTop_toTopOf="@+id/titrePaint" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/obsBtn"
                android:layout_width="649dp"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/photo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="224dp"
                        android:layout_marginLeft="224dp"
                        android:layout_marginTop="12dp"
                        android:text="ajouter une photo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/obs2" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPhoto"
                        android:layout_width="600dp"
                        android:layout_height="116dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_textview"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/photo5" />

                    <TextView
                        android:id="@+id/titre4"
                        android:layout_width="647dp"
                        android:layout_height="66dp"
                        android:background="#164081"
                        android:gravity="center"
                        android:text="Observations"
                        android:textColor="#FAF9F9"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/obs2"
                        android:layout_width="648dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:minLines="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titre4" />

                    <Button
                        android:id="@+id/enregistrerPompe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="56dp"
                        android:layout_marginLeft="56dp"
                        android:text="Enregistrer"
                        app:backgroundTint="@color/gray_400"
                        app:layout_constraintBottom_toBottomOf="@+id/retourPompe"
                        app:layout_constraintStart_toEndOf="@+id/retourPompe"
                        app:layout_constraintTop_toTopOf="@+id/retourPompe"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/termP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="270dp"
                        android:layout_marginLeft="270dp"
                        android:text="terminer"
                        app:backgroundTint="#164081"
                        app:layout_constraintBottom_toBottomOf="@+id/enregistrerPompe"
                        app:layout_constraintStart_toEndOf="@+id/retourPompe"
                        app:layout_constraintTop_toTopOf="@+id/enregistrerPompe" />

                    <Button
                        android:id="@+id/retourPompe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="108dp"
                        android:layout_marginLeft="108dp"
                        android:layout_marginTop="190dp"
                        android:text="Retour"
                        app:backgroundTint="@color/gray_400"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/obs2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</FrameLayout>