<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ficheChantier.FicheChantier" >

    <ScrollView
        android:layout_width="765dp"
        android:layout_height="1023dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="293dp"
                android:layout_height="128dp"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="logoSTB"
                android:src="@drawable/logo_grand_format" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/numDevis"
                    android:layout_width="286dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/round_textview" />

                <Button
                    android:id="@+id/btnValider"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="Démarrer un Chantier"
                    app:backgroundTint="#939393"
                    app:cornerRadius="60px" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="551dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14sp"
                android:background="@drawable/round_textview_full_grey">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="afficher les details"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="-4dp" />

                <TextView
                    android:id="@+id/client"
                    android:layout_width="155dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginRight="36dp"
                    android:background="@drawable/round_textview_full_white"
                    android:gravity="center"
                    android:text="Client"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adresse" />

                <TextView
                    android:id="@+id/vehicule"
                    android:layout_width="157dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_textview_full_white"
                    android:gravity="center"
                    android:text="vehicule"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/numero"
                    android:layout_width="159dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_textview_full_white"
                    android:gravity="center"
                    android:text="Numero"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/contact"
                    app:layout_constraintTop_toBottomOf="@+id/adresse" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="151dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_textview_full_white"
                    android:gravity="center"
                    android:text="Contact"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/vehicule"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adresse"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/adresse"
                    android:layout_width="474dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginRight="36dp"
                    android:background="@drawable/round_textview_full_white"
                    android:gravity="center"
                    android:text="Adresse"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details" />

                <LinearLayout
                    android:id="@+id/dates"
                    android:layout_width="308dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_textview_full_white"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <EditText
                        android:id="@+id/DateArrivee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="date" />

                    <EditText
                        android:id="@+id/DateDepart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="date" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/materiel"
                android:layout_width="536dp"
                android:layout_height="97dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/round_textview"
                android:gravity="center"
                android:text="Matériel Nécessaire" />

            <EditText
                android:id="@+id/objet"
                android:layout_width="532dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:background="@drawable/round_textview"
                android:gravity="center"
                android:text="Objet de l'intervention" />

            <EditText
                android:id="@+id/observation"
                android:layout_width="543dp"
                android:layout_height="119dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/round_textview"
                android:gravity="center"
                android:text="Observations" />

            <EditText
                android:id="@+id/diagnostic"
                android:layout_width="532dp"
                android:layout_height="100dp"
                android:background="@drawable/round_textview"
                android:gravity="center"
                android:text="Diagnostic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="147dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signclient"
                    android:layout_width="242dp"
                    android:layout_height="107dp"
                    android:layout_marginEnd="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/round_textview"
                    android:gravity="center"
                    android:text="Signature Client" />

                <TextView
                    android:id="@+id/signTech"
                    android:layout_width="271dp"
                    android:layout_height="104dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/round_textview"
                    android:gravity="center"
                    android:text="Signature Technicien" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="quitter"
                    app:backgroundTint="#939393" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="enregistrer"
                    app:backgroundTint="#939393" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>